<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a7279.db.activity.SendQuestionActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/send_question_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light">
    </android.support.v7.widget.Toolbar>
        <ImageView
            android:id="@+id/send_question_botton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_send"
            />
        <EditText
            android:id="@+id/send_question_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_input_edit"
            android:layout_below="@id/send_question_toolbar"
            android:layout_margin="10dp"
            android:hint="请输入标题"
            android:padding="5dp"
            android:maxLength="40"/>
        <EditText
            android:id="@+id/send_question_content"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@id/send_question_title"
            android:background="@drawable/shape_input_edit"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:hint="请输入内容"
            android:gravity="top"/>
        <ImageView
            android:id="@+id/send_question_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_below="@id/send_question_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_add"
            android:maxHeight="100dp"
            android:maxWidth="80dp"/>
        <ImageView
            android:id="@+id/send_question_cancelpic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_close"
            android:layout_toRightOf="@id/send_question_image"
            android:layout_below="@id/send_question_content"
            android:layout_marginTop="10dp"
            android:visibility="gone"/>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
