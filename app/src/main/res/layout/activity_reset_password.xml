<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a7279.db.activity.ResetPasswordActivity"
    xmlns:my_android="http://schemas.android.com/apk/res-auto"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/reset_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/reset_new_password1"
        android:src="@drawable/icon"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp" />



    <com.example.a7279.db.widgets.My_EdiText
    android:id="@+id/reset_new_password1"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_marginTop="10dp"
    android:layout_centerVertical="true"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    my_android:hint="请输入新密码"
    my_android:text="新密码"
        my_android:InputType="password"></com.example.a7279.db.widgets.My_EdiText>

    <com.example.a7279.db.widgets.My_EdiText
        android:id="@+id/reset_new_password2"
        android:layout_below="@id/reset_new_password1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        my_android:hint="请再次输入新密码"
        my_android:text="新密码"
        my_android:InputType="password"></com.example.a7279.db.widgets.My_EdiText>

    <Button
        android:id="@+id/reset_button1"
        android:layout_below="@id/reset_new_password2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_button"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="修改密码" />

    <Button
        android:id="@+id/reset_button2"
        android:layout_below="@id/reset_button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_button"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="取消" />

    <ProgressBar
        android:id="@+id/reset_progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/register_username"
        android:visibility="gone" />

</RelativeLayout>
</android.support.constraint.ConstraintLayout>
