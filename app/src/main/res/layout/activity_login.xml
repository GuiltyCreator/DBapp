<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a7279.db.activity.LoginActivity"
    xmlns:my_android="http://schemas.android.com/apk/res-auto"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/image_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/my_edit1"
            android:src="@drawable/icon"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"/>



        <com.example.a7279.db.widgets.My_EdiText
            android:id="@+id/my_edit1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
        my_android:hint="请输入账号"
        my_android:text="账号"
        ></com.example.a7279.db.widgets.My_EdiText>

        <com.example.a7279.db.widgets.My_EdiText
            android:id="@+id/my_edit2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_below="@id/my_edit1"
            my_android:hint="请输入密码"
            my_android:text="密码"
            my_android:InputType="password"
            ></com.example.a7279.db.widgets.My_EdiText>
        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_button"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="登录"
            android:layout_below="@id/my_edit2"/>

        <Button
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_button"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="注册 "
            android:layout_below="@id/login"/>
        <ProgressBar
            android:id="@+id/progress_Bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/my_edit1"
            android:visibility="gone"
            />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
